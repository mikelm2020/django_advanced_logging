# Django Advanced Logging - Configuración de Ejemplo para Docker

# ============================================================================
# CONFIGURACIÓN DE LOGGING
# ============================================================================

# Nombre de la aplicación/proyecto
LOG_NAME=my_django_app

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Entorno (development, staging, production)
LOG_ENVIRONMENT=development

# Directorio para logs (dentro del contenedor)
LOG_DIR=/app/logs

# Habilitar output en consola
LOG_CONSOLE=true

# Habilitar output en archivos
LOG_FILE=true

# Usar formato JSON (recomendado para production)
LOG_JSON=false

# ============================================================================
# CONFIGURACIÓN DE POSTGRESQL (Opcional)
# ============================================================================

# Habilitar logging a PostgreSQL
# IMPORTANTE: Usa automáticamente la misma base de datos de Django (DATABASES['default'])
# Solo necesitas habilitar esta opción y ejecutar: python manage.py migrate
POSTGRES_ENABLED=true

# Nombre de la tabla para logs (se crea en la misma BD del proyecto)
LOG_DB_TABLE=application_logs

# ============================================================================
# CONFIGURACIÓN DE BUFFER (PostgreSQL Handler)
# ============================================================================

# Tamaño del buffer (número de logs en memoria)
LOG_BUFFER_SIZE=1000

# Tamaño de lote para escritura
LOG_BATCH_SIZE=10

# Intervalo de flush en segundos
LOG_FLUSH_INTERVAL=5.0

# ============================================================================
# CONFIGURACIÓN DE DJANGO
# ============================================================================

# Secret key de Django (cambiar en producción)
DJANGO_SECRET_KEY=your-secret-key-change-in-production

# Debug mode
DJANGO_DEBUG=True

# Hosts permitidos
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Base de datos principal de Django (PostgreSQL)
# El paquete django-advanced-logging usa esta misma configuración
DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/django_db
